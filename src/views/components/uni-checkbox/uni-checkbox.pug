mixin uni-checkbox(args) 
  label.uni-checkbox(
    class=args.classes
  )
    input(type="checkbox", name="")
    .wrap-icon 
      img(src="assets/svg/icon-checkbox-ok.svg", alt="" loading="lazy").icon-ok
      img(src="assets/svg/icon-checkbox-no.svg", alt="" loading="lazy").icon-no
    span.text=args.text

